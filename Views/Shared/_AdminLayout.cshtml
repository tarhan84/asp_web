
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartSense</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .myTd {
            width: 400px;
            overflow: hidden; 
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .myTd2 {
            width: 300px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .logout:hover{
            background-color:red;
            color:white;
        }
        .islemler:hover{
            background-color:royalblue;
            color:white;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("index", "Admin")"><h3>Admin</h3></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ml-5">
                        <li class="nav-item ml-2">
                            <a class="nav-link active " href="@Url.Action("index","Admin")">Anasayfa</a>
                        </li>
                        <li class="nav-item ml-2">
                            <a class="nav-link active " href="@Url.Action("iletisim", "Admin")">İletişim Bilgileri</a>
                        </li>
                        <li class="nav-item ml-2">
                            <a class="nav-link active " href="@Url.Action("mesajlar", "Admin")">Mesajlar</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ml-auto">
                        <li class="nav-item dropdown" style="float:right;">
                            <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">@User.Identity.Name</button>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item logout" href="@Url.Action("logout", "Login")">Oturumu Kapat</a></li>
                                <li><a class="dropdown-item islemler" href="@Url.Action("UserSetting","Login")">Şifre İşlemleri</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function onInputFunc() {
            
            var pass = document.getElementById("pass").value;
            var passre = document.getElementById("passre").value;
            console.log(pass + "**" + passre);
            if (pass != passre) {
                document.getElementById("passre").style.borderColor = "red"
            }

            else {
                document.getElementById("passre").style.borderColor = "green";
                document.getElementById("pass").style.borderColor = "green";
                document.getElementById("passre").style.backgroundColor = "white";
            }

        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
