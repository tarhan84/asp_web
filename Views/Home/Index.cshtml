@{
    ViewData["Title"] = "Anasayfa";
}
@model SmartSense.Models.MesajModel

<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Executive | Landing, Corporate &amp; Business Templatee</title>
    <link rel="apple-touch-icon" sizes="180x180" href="~/tm/public/assets/img/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/tm/public/assets/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/tm/public/assets/img/favicons/favicon-16x16.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/tm/public/assets/img/favicons/favicon.ico">
    <link rel="manifest" href="~/tm/public/assets/img/favicons/manifest.json">
    <meta name="msapplication-TileImage" content="~/tm/public/assets/img/favicons/mstile-150x150.png">
    <meta name="theme-color" content="#ffffff">
    <link href="~/tm/public/assets/css/theme.css" rel="stylesheet" />
    <style>
        .effect-underline:after {
            content: '';
            position: absolute;
            left: 0;
            display: inline-block;
            height: 1em;
            width: 100%;
            border-bottom: 1px solid;
            margin-top: 10px;
            opacity: 0;
            -webkit-transition: opacity 0.35s, -webkit-transform 0.35s;
            transition: opacity 0.35s, transform 0.35s;
            -webkit-transform: scale(0,1);
            transform: scale(0,1);
        }

        .effect-underline:hover:after {
            opacity: 1;
            -webkit-transform: scale(1);
            transform: scale(1);
        }

        a.my {
            text-decoration: none;
            display: inline-block;
            position: relative;
            font-size: 20px
        }
    </style>
</head>


<body>
    <main class="main" id="top">
        <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" data-navbar-on-scroll="data-navbar-on-scroll">
            <div class="container">
                <a class="navbar-brand  d-flex align-items-center fw-semi-bold fs-3" href="@Url.Action("index","Home")">SMARTSENSE</a>
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse border-top border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto pt-2 pt-lg-0 font-base">
                        <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link fw-medium active" aria-current="page" href="#home">Anasayfa</a></li>
                        <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link" href="#ozellik">Ürün Özellikleri</a></li>
                        <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link" href="#hakkimizda">Hakkımızda</a></li>
                        <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link" href="#galeri">Galeria</a></li>
                        <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link" href="#iletisim">İletişim</a></li>
                        <li class="nav-item px-2" data-anchor="data-anchor"><a class="nav-link" href="#mesajGonder">Mesaj Gönder </a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <section class="py-0"  id="home">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-8 mr-auto ml-auto mt-4  text-sm-start text-center">
                        <h1 class="mt-6 mb-sm-4 display-4 fw-light lh-sm fs-4 text-center fs-lg-6 fs-xxl-7">@ViewBag.b1</h1><br />
                        <h6 class="mb-sm-4 display-4 fw-light lh-sm fs-4 text-center fs-lg-6 fs-xxl-5">@ViewBag.b2</h6>  
                    </div>
                </div>
            </div>
        </section>
        <section id="ozellik">

            <div class="container">
                <div class="row">
                    <div class="text-center">
                        <h5 class="fw-light fs-3 fs-lg-5 lh-sm mb-4">Ürün Özellikleri</h5>
                    </div>
                    <div class="col-12 col-md-12 col-sm-12 col-xl-12" style=" margin-bottom: 1em; border: 0.1em rgb(13, 173, 194) solid ; border-radius: 45px 5px 45px 5px;">
                        <div class="col-12 col-md-12 col-sm-12 col-xl-2">
                            <img src="img/map.png" style=" width: 10em; height: 10em;  float:left; padding:1em">
                        </div>
                        <div class="col-12 col-md-12 col-sm-12 col-xl-10">
                            <h2 style="font-size:1.6em;padding:1em;">
                                <b> KONUM TAKİBİ</b>
                                <p style="font-size:0.7em">Hastanın konumunu uzaktan izleyebilme ve Konum dışına çıktığında uyarılma özelliği</p>
                            </h2>
                        </div>
                    </div>

                    <div class="col-12 col-md-12 col-sm-12 col-xl-12" style=" margin-bottom: 1em; border: 0.1em rgb(13, 173, 194) solid ; border-radius: 45px 5px 45px 5px;">
                        <div class="col-12 col-md-12 col-sm-12 col-xl-2">
                            <img src="img/control-center.png" style=" width: 10em; height: 10em;  float:left; padding:1em">
                        </div>
                        <div class="col-12 col-md-12 col-sm-12 col-xl-10">
                            <h2 style="font-size:1.6em;padding:1em;">
                                <b>ERKEN UYARI ALARMI</b>
                                <p style="font-size:0.7em">Böylece hastalığın erken teşhisi ve hastanın uzaktan takibi yapılacaktır. Bu sayede sağlık sisteminin kapasitesinin daha verimli kullanılması amaçlanmaktadır.</p>
                            </h2>
                        </div>
                    </div>

                    <div class="col-12 col-md-12 col-sm-12 col-xl-12" style=" margin-bottom: 1em; border: 0.1em rgb(13, 173, 194) solid ; border-radius: 45px 5px 45px 5px;">
                        <div class="col-12 col-md-12 col-sm-12 col-xl-2">
                            <img src="img/warning.png" style=" width: 10em; height: 10em;  float:left; padding:1em">
                        </div>
                        <div class="col-12 col-md-12 col-sm-12 col-xl-10">
                            <h2 style="font-size:1.6em;padding:1em;">
                                <b>HASTA VİTAL BİLGİLERİNİ İZLEME</b>
                                <p style="font-size:0.7em">
                                    Vital (nabız, vücut sıcaklığı ve oksijen doygunluğu) verilerin takibi, Güvenli bölge sınırlamaları, Konum ve pozisyon izleme sayesinde sizi ve sevdiklerinizi potansiyel risklerden KORUR ve hatırlatmalar, sesli ve görüntülü bildirimler ile UYARIR.
                                </p>
                            </h2>
                        </div>
                    </div>

                    <div class="col-12 col-md-12 col-sm-12 col-xl-12" style=" margin-bottom: 1em; border: 0.1em rgb(13, 173, 194) solid ; border-radius: 45px 5px 45px 5px;">
                        <div class="col-12 col-md-12 col-sm-12 col-xl-2">
                            <img src="img/medicine.png" style=" width: 10em; height: 10em;  float:left; padding:1em">
                        </div>
                        <div class="col-12 col-md-12 col-sm-12 col-xl-10">
                            <h2 style="font-size:1.6em;padding:1em;">
                                <b> İLAÇ TAKİBİ</b>
                                <p style="font-size:0.7em">İlaçlarınızın kullanma saati ve dozları doktorunuz tarafından ayarlanabilecek, ilaç alma saatlerinde uyarılacaksınız.Bu sayede gereksiz ilaç kullanımı ve ilaç almayı unutma gibi sorunlar bitmiş olacak.</p>
                            </h2>
                        </div>
                    </div>
                </div>
            </div>

        </section>
        <section id="galeri" class="bg-100">
            <div class="container">
                <div class="text-center">
                    <h5 class="fw-light fs-3 fs-lg-5 lh-sm mb-4">Galeri</h5>
                </div>
                <div class="row align-content-center">
                    <div class="col-md-4">
                        <img src="~/img/product-screen-1.png" />
                    </div>
                    <div class="col-md-4">
                        <img src="~/img/product-screen-2.png" />
                    </div>
                    <div class="col-md-4">
                        <img src="~/img/product-screen-3.png" />
                    </div>

                </div>
            </div>
        </section>
        <section class="bg-100" id="iletisim">

            <div class="container">
                <div class="row">
                    <div class="text-center">
                        <h5 class="fw-light fs-3 fs-lg-5 lh-sm mb-4">İletişim</h5>
                    </div>
                    <div class="col-md-2"></div>

                    <div class="col-md-4 mt-5">

                        <img src="~/img/gmail.png" class="d-inline-block " />
                        <p class="d-inline-block ml-1">@ViewBag.eposta</p>
                        <br />
                        <img src="~/img/location.png" class="d-inline-block" />
                        <p class="d-inline-block ml-1">
                            @ViewBag.adres
                        </p>
                        <br />
                        <img src="~/img/telephone.png" class="d-inline-block" />
                        <p class="d-inline-block ml-1">@ViewBag.telefon</p>

                    </div>
                    <div class="col-md-4 mt-4">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3114.5606981693977!2d39.17487511486191!3d38.681962967219974!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4076c0392d27f05b%3A0x4518a6344d591f49!2sF%C4%B1rat%20Teknokent!5e0!3m2!1str!2str!4v1615051730782!5m2!1str!2str" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>

                    <div class="col-md-2"></div>
                </div>

               
            </div><!-- end of .container-->

        </section>
        <section class="bg-100" id="mesajGonder">
            <div class="container">
                <div class="row mt-5">
                    <div class="text-center">
                        <h5 class="fw-light fs-3 fs-lg-5 lh-sm mb-4">Mesaj Gönder</h5>
                    </div>
                    <div class="col-md-8 ml-auto mr-auto align-content-center">
                        @if (ViewBag.message != null)
                        {
                            <script>alert("Mesajınız Başarıyla İletildi");</script>
                            //****işlemden sonra form temizlenecek****
                        }
                        <form method="post" asp-controller="Home" asp-action="Index">
                            <span class="badge badge-warning" asp-validation-for="Email"></span>
                            <input id="email" type="email" asp-for="Email" placeholder="Email Adresinizi girin" required class="form-control" />
                            <br />
                            <input type="text" asp-for="Konu" placeholder="Mesaj Konusunu girin" class="form-control" />
                            <br />
                            <span class="badge badge-warning" asp-validation-for="Mesaj"></span>
                            <textarea class="form-control" asp-for="Mesaj" placeholder="Mesajınızı girin" rows="4" required></textarea>
                            <br />
                            <button class="btn btn-outline-primary">Mesaj Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section id="hakkimizda">

            <div class="container">
                <div class="row">
                    <div class="col-lg-7 mx-auto text-center my-5">
                        <h5 class="fw-light fs-3 fs-lg-5 lh-sm mb-4">Hakkımızda</h5>
                        <p class="mb-5">
                            @ViewBag.hakkimizda
                        </p>
                    </div>
                </div>
                
            </div><!-- end of .container-->

        </section>
    </main>
    <script src="~/tm/public/vendors/popperjs/popper.min.js"></script>
    <script src="~/tm/public/vendors/bootstrap/bootstrap.min.js"></script>
    <script src="~/tm/public/vendors/is/is.min.js"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
    <script src="~/tm/public/assets/js/theme.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet">
</body>

</html>
