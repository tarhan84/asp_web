@{  
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SmartSense.Iletisim 

<div class="row mt-5">
    <div class="col-md-8 ml-auto mr-auto">
        <form method="post" asp-action="Iletisim" asp-controller="Admin">
            <input class="form-control" required type="text" name="Telefon" asp-for="Telefon" />
            <br />
            <input class="form-control" required type="text" name="Eposta" asp-for="Eposta" />
            <br />
            <textarea class="form-control" asp-for="Adres" placeholder="" rows="4" required></textarea>
            <br />
            <button class="btn btn-outline-primary">Güncelle</button>
        </form>
    </div>
</div>
